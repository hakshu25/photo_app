<section class="flex justify-center items-center flex-col mt-12">
  <h1 class="text-3xl font-bold leading-7 text-gray-900 mb-6">ログイン</h1>
  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
      <ul class="list-inside list-disc">
        <% flash.each do |_, messages| %>
          <% messages.split("\n").each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(scope: :session, url: login_path, class: "shadow-md border rounded px-8 pt-6 pb-8 mb-4 flex flex-col items-center shrink-0") do |f| %>
    <div class="mb-4">
      <%= f.label :user_id, "ユーザーID", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :user_id, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>
    <div class="mb-6">
      <%= f.label :password, "パスワード", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
    </div>
    <div>
      <%= f.submit "ログインする", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>
</section>