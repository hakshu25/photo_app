<h1 class="text-3xl font-bold leading-7 text-gray-900 mb-6">写真一覧</h1>
<nav class="mb-6">
  <%= link_to '写真をアップロードする', new_photo_path(user_id: @user.id), class: "text-blue-600 hover:underline cursor-pointer" %>
</nav>
<% if @photos.empty? %>
  <p class="text-center text-md mt-24">まだ写真がありません。アップロードしてみましょう。</p>
<% else %>
  <div class="grid lg:grid-cols-8 md:grid-cols-6 sm:grid-cols-4 gap-6">
    <% @photos.each do |photo| %>
      <div>
        <img class="w-64 h-48 border" src="<%= url_for(photo.image) %>" alt="<%= photo.title %>">
        <p class="text-xl text-center"><%= photo.title %></p>
      </div>
    <% end %>
  </div>
<% end %>